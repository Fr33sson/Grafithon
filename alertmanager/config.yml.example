global:
  resolve_timeout: 5m

templates:
  - "/etc/alertmanager/templates/*.tmpl"

route:
  # Default receiver (gets everything unless a sub-route overrides it)
  receiver: telegram-all

  # Group alerts to reduce spam and keep context per host/service
  group_by: ["alertname", "instance", "job", "severity"]
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 2h

  routes:
    # Send ONLY major alerts to Zenduty (in addition to Telegram)
    - receiver: zenduty-major
      matchers:
        - severity="major"
      repeat_interval: 30m
      continue: true

    # Telegram receives everything (major/warning/info)
    - receiver: telegram-all
      matchers:
        - severity=~"major|warning|info"
      repeat_interval: 2h

# Suppress warning/info alerts when the host is down
inhibit_rules:
  - source_matchers:
      - alertname="HostDown"
    target_matchers:
      - severity=~"warning|info"
    equal: ["instance"]

receivers:
  - name: telegram-all
    telegram_configs:
      - api_url: https://api.telegram.org
        parse_mode: "HTML"
        send_resolved: true
        message: '{{ template "telegram.grafithon" . }}'
        chat_id: 123456789
        bot_token: "123456789:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"

  - name: zenduty-major
    webhook_configs:
      - url: "https://events.zenduty.com/api/events/REPLACE_WITH_YOUR_WEBHOOK"
        send_resolved: true
        max_alerts: 0
