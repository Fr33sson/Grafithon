# =========================================================
# Caddy reverse proxy for Grafana
#
# Replace example.com with your real domain
# =========================================================

example.com {

    # Reverse proxy to Grafana container
    reverse_proxy grafana:3000

    # Optional but recommended security headers
    header {
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "no-referrer"
        X-XSS-Protection "1; mode=block"
    }

    # Enable gzip/zstd compression
    encode gzip zstd

    # Logging (optional, useful for troubleshooting)
    log {
        output stdout
        format console
    }
}
